@using System.Web.UI.WebControls
@using AuctionWebApplication.AuctionService;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aalborg Auction</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head  >
<body>
  
    @*<div class="navbar navbar-inverse navbar-fixed-top">*@
    <div class="navbar-fixed-top">
            <h1>Aalborg Auction</h1> 
        <div class="searchBar">
            <form form method="get" action="@Url.Action("List", "Auction")">
                <div class="input-placeholder">
                    <div class="inputSearch">
                        <span id="request" style="font-size:20px">@Html.TextBox("Search", "", new { placeholder = "Search..", style = "font-style:italic" })</span>      
                  </div>
                </div>
              </form>
            </div>
       
            @*<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Aalborg Auction", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>*@
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">*@
                <ul class="topbar-content">
                    <li>@Html.ActionLink("Home", "Index", "Auction")</li>
                    <li>@Html.ActionLink("Categories", "Index", "Category")</li>

                    @if (Session["LoggedUser"] == null)
                    {
                        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                       <li>@Html.ActionLink("Register", "Create", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Account", "Edit", "Account")</li>
                        <li>@Html.ActionLink("New Auction", "Create", "Auction")</li>
                        <li>@Html.ActionLink("Log out", "LogOut", "Account")</li>
                    }
                </ul>
            </div>
</div>
  
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="footer-inner">
                <ul>
                    <li><a href="#" style="text-decoration:none;"><span style="color:white"><font face="arial" , size="2">About Us</font></span></a></li>
                    <li><a href="#" style="text-decoration:none;"><span style="color:white"><font face="arial" , size="2">Contact Us</font></span></a></li>
                    <li><a href="#" style="text-decoration:none;"><span style="color:white"><font face="arial" , size="2">Aalborg Dk</font></span></a></li>
                </ul>
            </div>
            <div class="social">
                <ul>
                    <li><a href="https://mail.google.com/mail/u/0/" target="_blank"><img src="https://www.fortunefiles.org/templates/images/mail-icon.png" height="38" width="38" title="gmail" /></a></li>
                    <li><a href="http://www.facebook.com" target="_blank"><img src="https://image.freepik.com/free-icon/facebook-square-social-logo_318-74909.png" height="38" width="38" title="facebook" /></a></li>
                    <li><a href="https://twitter.com/" target="_blank"><img src="http://vectorlogofree.com/wp-content/uploads/2014/06/50920-twitter-logo-bird-shape-in-a-square-icon-vector-icon-vector-eps.png" height="38" width="38" title="twitter" /></a></li>
                </ul>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
